
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/AuthorizeLayout.cshtml";
}

<div style="text-align: center; padding-top: 20px;">
    <h1>Farms detail page</h1>
</div>

<style>
    /* Center the container element vertically and horizontally */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    /* Set a fixed width and height for the buttons */
    .btn {
        width: 250px;
        height: 100px;
    }
</style>

<form asp-action="Index">
    <div class="container">
        <input type="submit" asp-controller="user" asp-action="all-users" value="Invite friend" class="btn btn-primary" style="margin-right: 10px;" />
        <input type="submit" asp-controller="user" asp-action="collaborators" value="My collaborators" class="btn btn-primary" style="margin-right: 10px;" />
        <input type="submit" asp-controller="farm-detail" asp-action="statistics" value="Farm statistics" class="btn btn-primary" style="margin-right: 10px;" />
    </div>
</form>

