@model RegistrationUser
@{
    Layout = "AuthorizeLayout";
}
@{
    ViewData["Title"] = "Index";
}

<h1>Personal info</h1>


<hr />
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <td>
                    <img src="~/Images/avatars/@Model.Dto.Avatar" width="200" height="200" />
                    <input asp-for="@Model.Dto.Avatar" type="hidden" class="form-control" />
                </td>
                <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Dto.UserName" class="control-label"></label>
                    <input asp-for="@Model.Dto.UserName" class="form-control" />
                    <span asp-validation-for="@Model.Dto.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Dto.FirstName" class="control-label"></label>
                    <input asp-for="@Model.Dto.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.Dto.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Dto.LastName" class="control-label"></label>
                    <input asp-for="@Model.Dto.LastName" class="form-control" />
                    <span asp-validation-for="@Model.Dto.LastName" class="text-danger"></span>
                </div>
                     <div class="form-group">
                        <label asp-for="@Model.Dto.Email" class="control-label"></label>
                        <input asp-for="@Model.Dto.Email" readonly = "readonly" class="form-control" />
                        @*<span asp-validation-for="@Model.Dto.Email" class="text-danger"></span>*@
            </div>


                <div class="form-group">
                    <label asp-for="@Model.Image" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Image" class="custom-file-input" id="customFile" />
                        <label class="custom-file-label" for="customFile"></label>
                    </div>
                    @*<span asp-validation-for="@Model.Image" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <input type="submit" asp-area="" asp-controller="account" asp-action="update" value="Update" class="btn btn-primary" />
                </div>
                    <div class="form-group">
                        <input type="submit" asp-area="" asp-controller="account" asp-action="change-password-view" value="Change password" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
</form>