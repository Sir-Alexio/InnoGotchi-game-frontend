@using InnoGotchi_backend.Models.Dto;
@model UserDto
@{
    ViewData["Title"] = "user-info";
    Layout = "~/Views/Shared/AuthorizeLayout.cshtml";
}

<th><h1>Info of user: @Model.Email</h1></th>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <td>
                <img src="~/Images/avatars/@Model.Avatar" width="300" height="300" />
            </td>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <h5>@Model.UserName</h5>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <h5>@Model.FirstName</h5>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <h5>@Model.LastName</h5>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <h5>@Model.Email</h5>
            </div>

            <div class="form-group">
                <input type="submit" asp-controller="account" asp-action="edit-view" value="Invite" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<form asp-action="Index">
    <input type="submit" asp-controller="farm" asp-action="my-own-farm" value="Back" class="btn btn-secondary" />
</form>
