@using InnoGotchi_backend.Models.Dto;
@model List<UserDto>
@{
    ViewData["Title"] = "Caloborators";
    Layout = "~/Views/Shared/AuthorizeLayout.cshtml";
}

<h1>My collaborators</h1>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Email</th>
            <th>User Name</th>
            <th>First name</th>
            <th>Last name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/avatars/@user.Avatar" width="50" height="50" />
                </td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Index">
    <input type="submit" asp-controller="farm-detail" asp-action="main-page" value="Back" class="btn btn-secondary" />
</form>