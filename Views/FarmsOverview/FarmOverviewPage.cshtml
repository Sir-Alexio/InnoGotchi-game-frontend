
@{
    ViewData["Title"] = "FarmOverviewPage";
    Layout = "~/Views/Shared/AuthorizeLayout.cshtml";
}}

<div style="text-align:center; ">
    <h1>Farms overview page</h1>
</div>

<style>
    /* Center the container element vertically and horizontally */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    /* Set a fixed width and height for the buttons */
    .btn {
        width: 250px;
        height: 100px;
    }
</style>
<form asp-action="Index">
<div class="container">
    <input type="submit" asp-controller="farm" asp-action="my-own-farm" value="My own farm" class="btn btn-primary" />
    <input type="submit" asp-controller="farm" asp-action="farm-info" value="Farms, where i'm colabarator" class="btn btn-secondary" />
</div>
</form>
