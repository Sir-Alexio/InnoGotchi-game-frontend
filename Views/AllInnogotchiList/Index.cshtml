@model IEnumerable<InnoGotchi_backend.Models.Pet>

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HungerLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThirstyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HappyDaysCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HungerLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThirstyLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HappyDaysCount)
            </td>
             <td>
                    <img src=@item.Body width= "200" height="200"/>
            </td>   
            
        </tr>
}
    </tbody>
</table>
